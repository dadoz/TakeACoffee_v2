<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/small_padding"
    android:paddingRight="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding_setting"
    android:paddingBottom="@dimen/small_padding_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/settingLabelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings"
        android:textColor="@color/material_brown800"
        android:textSize="@dimen/text_big_22"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/settingDescriptionTextviewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_big_18"
        android:textColor="@color/material_red400"
        android:text="sync"/>

</RelativeLayout>