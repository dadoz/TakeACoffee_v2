<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <include layout="@layout/dashboard_status_template"/>

    <ListView
            android:id="@+id/reviewsContainerListViewId"
            android:layout_below="@id/dashboardStatusLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/listview_selector"
            android:divider="@color/middle_grey"
            android:dividerHeight="0.5dp"
            android:orientation="vertical" />

    <com.shamanland.fab.FloatingActionButton
            android:id="@+id/addReviewFabId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/floating_action_button_margin_normal"
            android:layout_marginRight="@dimen/floating_action_button_margin_normal"
            app:floatingActionButtonColor="@color/material_amber"
            android:src="@drawable/edit_icon_ultra_small_b"/>


</RelativeLayout>