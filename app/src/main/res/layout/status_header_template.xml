<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
        android:id="@+id/statusHeaderLayoutId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/coffee_machine_status_header_size"
        android:background="@color/light_grey">
        <ImageView
                android:id="@+id/statusCoffeeIconId"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/coffee_icon_size"
                android:layout_height="@dimen/coffee_icon_size"
                android:src="@drawable/coffee_cup_icon" />

        <LinearLayout
                android:layout_toRightOf="@id/statusCoffeeIconId"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/periodTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_text_black"
                        android:textSize="@dimen/title_text_size"
                        android:text=" - "
                        android:layout_marginBottom="@dimen/small_padding"
                        pixlui:copyandpaste="false"
                        pixlui:clearclipboardcontent="true"
                        pixlui:typeface="chimphand-regular.ttf"/>


                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/goodReviewPercentageTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_red_200"
                    android:textSize="@dimen/title_text_size"
                    android:text="- %"
                    pixlui:copyandpaste="false"
                    pixlui:clearclipboardcontent="true"
                    pixlui:typeface="chimphand-regular.ttf"/>

                <com.neopixl.pixlui.components.textview.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_text_black"
                    android:textSize="@dimen/small_content_text_size"
                    android:text="of good review"
                    pixlui:copyandpaste="false"
                    pixlui:clearclipboardcontent="true"
                    pixlui:typeface="chimphand-light.ttf"/>
        </LinearLayout>

