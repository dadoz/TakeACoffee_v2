<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
        android:id="@+id/coffeeMachineSettingsMapHeaderLayoutId"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/coffeeMachineStatusContainerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true">
        <!--android:background="@drawable/border_left_light_grey"-->

        <ImageView
                android:id="@+id/coffeeMachineStatusButtonId"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:padding="@dimen/small_padding_5"
                android:src="@drawable/barometer_icon"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/coffeeMachineNameContainerTemplateId"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_toRightOf="@+id/coffeeMachineStatusContainerId">
        <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/coffeeMachineNameReviewTextTemplateId"
                android:textSize="@dimen/text_big_38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/small_padding"
                android:text="name"
                pixlui:copyandpaste="false"
                pixlui:clearclipboardcontent="true"
                pixlui:typeface="AmaticSC-Regular.ttf"/>

    </LinearLayout>

</RelativeLayout>
