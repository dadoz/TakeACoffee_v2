<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/coffeeIconHeaderId"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/coffee_cup_icon" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/coffeeMachineNameHeaderId"
                    android:textSize="@dimen/text_big_38"
                    android:textColor="@color/dark_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/small_padding"
                    android:text="name"
                    pixlui:copyandpaste="false"
                    pixlui:clearclipboardcontent="true"
                    pixlui:typeface="chimphand-light.ttf"/>

            <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/coffeeMachineLocationHeaderId"
                    android:textSize="@dimen/text_medium_20"
                    android:textColor="@color/dark_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/small_padding"
                    android:text="location"
                    pixlui:copyandpaste="false"
                    pixlui:clearclipboardcontent="true"
                    pixlui:typeface="chimphand-light.ttf"/>


    </LinearLayout>



