<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/cActBarTitleId"
            android:textSize="@dimen/text_big_24"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/small_padding"
            android:text="@string/titleTakeACoffee"/>

    <!--coffee machine template -->
    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/customActionBarCoffeeMachineLayoutId"
            android:paddingBottom="@dimen/small_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                    android:id="@+id/cActBarCoffeeMachineLocationId"
                    android:textSize="@dimen/text_big_26"
                    android:textColor="@color/material_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/small_padding"
                    android:text="location"/>
    </RelativeLayout>

    <!--user template -->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customActionBarUserLayoutId"
            android:gravity="center_vertical"
            android:visibility="gone">
        <include layout="@layout/header_user_template" />
    </LinearLayout>

    <!--review list template -->
    <LinearLayout
            android:id="@+id/customActionBarReviewListLayoutId"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/cActBarPeriodTextId"
                android:textSize="@dimen/text_small_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/small_padding"
                android:text=" - "/>

    </LinearLayout>

    <!--review list template -->
    <LinearLayout
            android:id="@+id/customActionBarMapLayoutId"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </LinearLayout>
    <!--Settings-->
    <LinearLayout
            android:id="@+id/customActionSettingsLayoutId"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </LinearLayout>


</LinearLayout>
