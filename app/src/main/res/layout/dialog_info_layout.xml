<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialogTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_red400"
        android:textSize="@dimen/text_big_30"
        android:text="@string/app_name"/>
    <TextView
        android:layout_below="@id/dialogTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_padding"
        android:textColor="@color/material_brown800"
        android:textSize="@dimen/text_big_18"
        android:text="@string/info_description"/>


</RelativeLayout>