<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/reviewsButtonId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:orientation="vertical">
        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/coffeeIconId"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:src="@drawable/coffee_cup_icon" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <np.TextView
                android:id="@+id/coffeeMachineNameTextId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_light_red"
                android:gravity="center"
                android:textSize="@dimen/header_button_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="dalksfalskdfj"
                style="@style/AppTheme.TextChimphand"/>

            <np.TextView
                android:id="@+id/coffeeMachineAddressTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_text_brown"
                android:textSize="@dimen/text_small_16"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="dalksfalskdfj"
                style="@style/AppTheme.TextChimphand"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

