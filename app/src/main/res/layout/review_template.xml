<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    <LinearLayout
            android:id="@+id/mainItemViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                        android:layout_width="140dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding"
                        android:gravity="center"
                        android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/profilePicReviewTemplateId"
                        android:layout_width="@dimen/large_icon_size"
                        android:layout_height="@dimen/large_icon_size"
                        android:src="@drawable/user_icon" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    <com.neopixl.pixlui.components.textview.TextView

                            android:id="@+id/reviewUsernameTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textColor="@color/material_brown"
                            android:gravity="center"
                            android:textSize="@dimen/text_big_40"
                            pixlui:copyandpaste="false"
                            pixlui:clearclipboardcontent="true"
                            pixlui:typeface="Amatic-Bold.ttf"/>

                    <com.neopixl.pixlui.components.textview.TextView
                            android:id="@+id/reviewCommentTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_padding"
                            android:text="review content"
                            android:maxLines="5"
                            android:ellipsize="end"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/text_big_22"
                            pixlui:copyandpaste="false"
                            pixlui:clearclipboardcontent="true"
                            pixlui:typeface="AmaticSC-Regular.ttf"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/reviewDateTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_text_black"
                        android:textSize="@dimen/text_small"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingRight="@dimen/small_padding"
                        android:layout_marginRight="@dimen/small_padding"
                        android:text=" 06.11.1990 "
                        pixlui:copyandpaste="false"
                        pixlui:clearclipboardcontent="true"
                        pixlui:typeface="AmaticSC-Regular.ttf"/>

            </LinearLayout>
    </LinearLayout>
    <!--<include layout="@layout/extra_menu_review_template" />-->
</LinearLayout>