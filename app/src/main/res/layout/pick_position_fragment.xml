<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_brown800">
    <ImageView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:id="@+id/successPickIconId"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/huge_padding"
        android:src="@drawable/ic_check_white_48dp"/>
    <ImageView
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:id="@+id/errorPickIconId"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/huge_padding"
        android:src="@drawable/ic_error_outline_white_48dp"/>
    <ImageView
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:id="@+id/pickIconId"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/huge_padding"
        android:src="@drawable/ic_place_white_48dp"/>
    <ProgressBar
        android:id="@+id/pickLocationProgressId"
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:indeterminateTint="@color/material_brown400"
        android:indeterminateTintMode="src_in"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pickIconId"
        android:id="@+id/pickDescriptionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_brown400"
        android:textSize="@dimen/text_big_24"
        android:text="Pick a city"/>
    <AutoCompleteTextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pickDescriptionId"
        android:id="@+id/locationAutocompleteTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:maxWidth="350dp"
        android:textColor="@color/material_grey200"
        android:textSize="@dimen/text_big_24"
        android:textColorHint="@color/material_brown600"
        android:lines="1"
        android:hint="city..."/>
    <TextView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/locationAutocompleteTextViewId"
        android:id="@+id/findCurrentPositionButtonId"
        android:textSize="@dimen/text_big_22"
        android:padding="@dimen/medium_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_brown600"
        android:text="find current"/>
    <TextView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/locationDoneButtonId"
        android:textSize="@dimen/text_big_18"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/material_grey200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/locationDoneButtonId"
        android:background="@color/material_brown600"/>

</RelativeLayout>