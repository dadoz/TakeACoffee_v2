<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/reviewsButtonId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginBottom="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_padding"
            android:id="@+id/coffeeIconId"
            android:layout_width="@dimen/coffee_icon_size"
            android:layout_height="@dimen/coffee_icon_size"
            android:src="@drawable/coffee_cup_icon" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/material_grey200"
            android:orientation="vertical">
            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/coffeeMachineNameTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_light_red"
                android:text="Coffee machine name"
                android:textSize="@dimen/title_text_size"
                pixlui:copyandpaste="false"
                pixlui:clearclipboardcontent="true"
                pixlui:typeface="chimphand-regular.ttf"/>

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/coffeeMachineAddressTextId"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_text_brown"
                android:text="position"
                android:textSize="@dimen/text_medium_20"
                pixlui:copyandpaste="false"
                pixlui:clearclipboardcontent="true"
                pixlui:typeface="chimphand-regular.ttf"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

