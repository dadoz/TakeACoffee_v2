<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/changePlaceFilterCardviewId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/CardView.Light"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginRight="@dimen/small_padding"
    android:layout_marginBottom="5dp"
    android:foreground="@drawable/custom_foreground_selector">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small_padding">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/changePlaceTextInputLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/material_brown800"
            app:hintTextAppearance="@style/TextLabel"
            android:lines="1">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/changePlaceEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big_22"
                android:textColor="@color/material_grey800"
                android:textColorHint="@color/material_brown800"
                android:lines="1"
                android:hint="@string/city" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/changePlaceConfirmButtonId"
            android:layout_alignParentRight="true"
            android:layout_below="@id/changePlaceTextInputLayoutId"
            android:padding="@dimen/medium_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big_22"
            android:textColor="@color/material_red400"
            android:text="SAVE"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>