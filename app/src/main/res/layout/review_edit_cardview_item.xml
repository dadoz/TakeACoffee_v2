<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/reviewEditCardviewLayoutId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/small_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_padding"
        android:orientation="vertical">
        <EditText
            android:id="@+id/commentReviewEditTextId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_brown800"
            android:textColorHint="@color/material_brown200"
            android:hint="Write something..."
            android:textSize="@dimen/text_big_18"
            android:maxLines="6"
            android:gravity="top"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeReviewEditIconId"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:padding="@dimen/extra_small_padding"
                android:src="@drawable/heart_filled_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_grey600"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_big_18"
                android:layout_marginRight="3dp"
                android:text="tap to like!"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
