<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
                android:id="@+id/reviewPictureLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/profilePicReviewTemplateId"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_marginRight="@dimen/medium_padding"
                android:src="@drawable/user_icon"/>

            <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/reviewDateTextId"
                    android:layout_width="@dimen/timestamp_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/small_padding"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:textColor="@color/material_grey"
                    android:textSize="@dimen/timestamp_text_size"
                    android:text="date"
                    pixlui:copyandpaste="false"
                    pixlui:clearclipboardcontent="true"
                    pixlui:typeface="chimphand-light.ttf"/>

            <LinearLayout
                    android:id="@+id/reviewContainerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/small_padding"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_toRightOf="@id/profilePicReviewTemplateId"
                    android:layout_toLeftOf="@id/reviewDateTextId">

                <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/reviewUsernameTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/material_blue_200"
                        android:gravity="top"
                        android:textSize="@dimen/title_text_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        pixlui:copyandpaste="false"
                        pixlui:clearclipboardcontent="true"
                        pixlui:typeface="chimphand-regular.ttf"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/com_facebook_profile_default_icon"/>

            </LinearLayout>




</RelativeLayout>