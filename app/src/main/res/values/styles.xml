<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/material_brown900</item>
        <item name="colorPrimary">@color/material_brown800</item>
        <item name="colorAccent">@color/material_brown400</item>
        <item name="android:itemBackground">@color/material_brown700</item>
    </style>
    <style name="ReviewToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@color/material_grey800</item>
        <item name="android:colorBackground">@color/material_grey200</item>
        <item name="android:textColor">@color/material_brown800</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textColor">@color/material_grey50</item>-->
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/material_red400</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/material_brown800</item>
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>
</resources>
